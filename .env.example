# Database Configuration
# Update these values before running docker-compose

# MySQL Host (use 'mysql' for docker-compose, or external IP)
DB_HOST=mysql

# MySQL User
DB_USER=root

# MySQL Password (CHANGE THIS!)
DB_PASSWORD=your_secure_password_here

# Database Name
DB_NAME=blockapp_db

# MySQL Root Password (for docker-compose)
MYSQL_ROOT_PASSWORD=your_secure_password_here

# MySQL Database Name (for docker-compose)
MYSQL_DATABASE=blockapp_db

# Node.js Port
PORT=5000
